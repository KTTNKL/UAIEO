<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_activity" />
    <TextView
        android:id="@+id/emailTV"
        android:layout_width="241dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lobster"
        android:text="@string/profile"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/savedQuestionsBT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_edit_text"
        android:fontFamily="@font/sanchez"
        android:text="@string/profile_saved_questions"
        android:textAllCaps="false"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/emailTV"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/notificationBT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edit_text"
        android:fontFamily="@font/sanchez"
        android:text="@string/profile_notification"
        android:textAllCaps="false"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/savedQuestionsBT"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/changePasswordBT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edit_text"
        android:fontFamily="@font/sanchez"
        android:text="@string/profile_change_password"
        android:textAllCaps="false"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/notificationBT"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/logoutBT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edit_text"
        android:fontFamily="@font/sanchez"
        android:text="@string/profile_logout"
        android:textAllCaps="false"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/changePasswordBT"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>